/** Stylus Styles */
@import '../../node_modules/vuetify/src/stylus/settings/_colors'

$theme := {
  lol: $cyan.lighten-3
  kek: $brown.darken-1
  primary: $light-green.darken-3
  accent: $red.accent-2
  secondary: $grey.lighten-1
  info: $light-blue.lighten-3
  warning: $yellow.darken-1
  error: $red.accent-4
  success: $green.lighten-1
}

@import '../../node_modules/vuetify/src/stylus/main'

.castom-loader {
  animation: loader 1s infinite
  display: flex
}

@keyframes loader {
  from {
    transform: rotate(0);
  }
  to {
    transform: rotate(360deg);
  }
}